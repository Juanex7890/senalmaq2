# Firebase Web SDK (get these from Firebase Console > Project Settings > General)
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSyC...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Admin SDK (get these from Firebase Console > Project Settings > Service Accounts)
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...\n-----END PRIVATE KEY-----\n"

# Revalidation (any random string)
REVALIDATE_TOKEN=your_secure_random_token_here_12345

# Public site URL (used in emails, Mercado Pago redirects and OG tags)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Mercado Pago (Checkout Pro) - PRODUCTION CREDENTIALS
# Get these from your MercadoPago Dashboard > Developers > Credentials
NEXT_PUBLIC_MP_PUBLIC_KEY=YOUR_PRODUCTION_PUBLIC_KEY_HERE
MP_ACCESS_TOKEN=YOUR_PRODUCTION_ACCESS_TOKEN_HERE

# Optional: override WhatsApp number used on checkout status pages (digits, spaces or + allowed)
NEXT_PUBLIC_WHATSAPP_NUMBER=+57 317 669 3030
